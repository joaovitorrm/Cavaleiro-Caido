<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <link href="../css/main.css" rel="stylesheet"> 
    <link href="../css/cadastrados.css" rel="stylesheet"> 
    <title>Cavaleiro Caído</title>
    <link rel="icon" href="../images/icones/casa.png">
</head>
<body>
    
    <%- include('header.html')%>

    <main>
        <div id="boxTable">
            <div id="opcoes">
                <div id="filtro">
                    <input type="text" placeholder="digite seu filtro"></input>
                    <button>aplicar filtro</button>
                </div>   
                <div id="acoes">
                    <button>inserir</button>
                    <button>atualizar</button>
                    <button>retirar</button>
                </div>
            </div>
            <table>
                <tr class="cabecalho">
                    <th>Seleção</th>
                    <th>Nome</th>
                    <th>Permissão</th>
                    <th>Email</th>
                    <th>Senha</th>
                    <th>Data de Nascimento</th>
                </tr>
                <% usuarios.forEach((u) => {%>
                <tr>
                    <td id="checkbox"><input type="checkbox"></input></td>
                    <td><%= u.id %></td>
                    <td><%= u.imagem %></td>
                    <td><%= u.nome %></td>
                    <td><%= u.nome %></td>
                    <td><%= u.email %></td>
                    <td><%= u.senha %></td>
                    <td><%= u.data_nascimento %></td>
                </tr>
                <% })%>
            </table>
        </div>
    </main>

    <%- include('aside.html') %>
    
    <%- include('footer.html') %>
    
</body>
</html>